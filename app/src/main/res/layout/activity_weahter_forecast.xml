<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gurleen.myandroidlab.WeahterForecast">

    <ImageView
        android:id="@+id/imageViewWeather"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@android:drawable/alert_light_frame"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="82dp" />

    <TextView
        android:id="@+id/textViewCurrentTemprature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/progressBar"
        android:layout_below="@+id/imageViewWeather"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="94dp"
        android:text="Current"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="189dp" />

    <TextView
        android:id="@+id/textViewMinTemprature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textViewMaxTemprature"
        android:text="Min"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="246dp" />

    <TextView
        android:id="@+id/textViewMaxTemprature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/progressBar"
        android:layout_below="@+id/textViewCurrentTemprature"
        android:layout_marginTop="31dp"
        android:text="Max"
        tools:layout_editor_absoluteX="130dp"
        tools:layout_editor_absoluteY="338dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textViewMinTemprature"
        android:layout_marginEnd="76dp"
        android:layout_marginTop="51dp"
        android:visibility="invisible"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="408dp" />
</RelativeLayout>
